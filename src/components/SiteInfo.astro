---
import pkg from '../../package.json';
---

<button id="site-info-btn" class="site-info-button" aria-label="Site Information" title="Site Information">
  !
</button>

<div id="site-info-modal" class="site-info-modal" style="display: none;">
  <div class="modal-content">
    <button id="close-modal" class="close-btn" aria-label="Close">&times;</button>
    <h3>Site Information</h3>
    
    <div class="info-section">
      <h4>Author</h4>
      <p>Ahmed N. Alfahdi</p>
      <p class="subtitle">Mechanical Engineer</p>
    </div>

    <div class="info-section">
      <h4>Version</h4>
      <p>{pkg.version}</p>
    </div>

    <div class="info-section">
      <h4>Framework & Dependencies</h4>
      <ul class="deps-list">
        <li><span class="dep-name">Astro</span> <span class="dep-version">{pkg.dependencies.astro}</span></li>
        <li><span class="dep-name">Three.js</span> <span class="dep-version">{pkg.dependencies.three}</span></li>
        <li><span class="dep-name">MDX</span> <span class="dep-version">{pkg.devDependencies['@astrojs/mdx']}</span></li>
        <li><span class="dep-name">Mermaid</span> <span class="dep-version">{pkg.dependencies.mermaid}</span></li>
        <li><span class="dep-name">KaTeX</span> <span class="dep-version">{pkg.dependencies['rehype-katex']}</span></li>
        <li><span class="dep-name">MapLibre GL JS</span> <span class="dep-version">3.6.1 (CDN)</span></li>
      </ul>
    </div>

    <div class="info-section">
      <h4>Build</h4>
      <p class="build-date">{new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
    </div>
  </div>
</div>

<style>
  .site-info-button {
    position: fixed;
    bottom: 1rem;
    right: 1rem;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--bg-secondary);
    border: 1px solid var(--border-light);
    color: var(--text-muted);
    font-size: 0.9rem;
    font-weight: 700;
    font-family: var(--font-mono);
    cursor: pointer;
    transition: all 0.2s ease;
    z-index: 110;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .site-info-button:hover {
    background: var(--bg-tertiary);
    color: var(--accent-secondary);
    border-color: var(--accent-secondary);
    transform: scale(1.1);
  }

  .site-info-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.8);
    z-index: 200;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    backdrop-filter: blur(4px);
  }

  .modal-content {
    background: var(--bg-secondary);
    border: 1px solid var(--border-strong);
    border-radius: 4px;
    padding: 2rem;
    max-width: 500px;
    width: 100%;
    max-height: 80vh;
    overflow-y: auto;
    position: relative;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
  }

  .close-btn {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: transparent;
    border: none;
    color: var(--text-muted);
    font-size: 2rem;
    cursor: pointer;
    line-height: 1;
    transition: color 0.2s;
    padding: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .close-btn:hover {
    color: var(--accent-primary);
  }

  .modal-content h3 {
    color: var(--accent-primary);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0 0 1.5rem 0;
    font-size: 1.3rem;
    border-bottom: 1px solid var(--border-strong);
    padding-bottom: 0.75rem;
  }

  .info-section {
    margin-bottom: 1.5rem;
  }

  .info-section h4 {
    color: var(--accent-secondary);
    text-transform: uppercase;
    font-size: 0.85rem;
    letter-spacing: 1px;
    margin: 0 0 0.5rem 0;
  }

  .info-section p {
    color: var(--text-primary);
    margin: 0.25rem 0;
    font-family: var(--font-mono);
  }

  .subtitle {
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .deps-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .deps-list li {
    display: flex;
    justify-content: space-between;
    padding: 0.4rem 0;
    border-bottom: 1px solid var(--border-light);
    color: var(--text-secondary);
    font-family: var(--font-mono);
    font-size: 0.85rem;
  }

  .deps-list li:last-child {
    border-bottom: none;
  }

  .dep-name {
    color: var(--text-primary);
  }

  .dep-version {
    color: var(--text-muted);
  }

  .build-date {
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  @media (max-width: 768px) {
    .site-info-button {
      bottom: 4rem;
      right: 1rem;
    }

    .modal-content {
      padding: 1.5rem;
      max-height: 90vh;
    }
  }
</style>

<script is:inline>
  const button = document.getElementById('site-info-btn');
  const modal = document.getElementById('site-info-modal');
  const closeBtn = document.getElementById('close-modal');

  if (button && modal && closeBtn) {
    button.addEventListener('click', () => {
      modal.style.display = 'flex';
      document.body.style.overflow = 'hidden';
    });

    closeBtn.addEventListener('click', () => {
      modal.style.display = 'none';
      document.body.style.overflow = '';
    });

    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.style.display = 'none';
        document.body.style.overflow = '';
      }
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal.style.display === 'flex') {
        modal.style.display = 'none';
        document.body.style.overflow = '';
      }
    });
  }
</script>

