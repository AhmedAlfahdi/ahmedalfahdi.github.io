---
interface Props {
  src: string;
  title?: string;
  height?: string;
  width?: string;
}

const {
  src,
  title = 'PDF Document',
  height = '640px',
  width = '100%',
} = Astro.props;
---

<div class="pdf-viewer-wrapper" style={`height: ${height}; width: ${width};`}>
  <div class="pdf-header">
    <div class="pdf-meta">
      <span class="pdf-label">PDF</span>
      <span class="pdf-title">{title}</span>
    </div>
    <a href={src} download class="pdf-btn pdf-download" title="Download PDF">
      <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
        <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
        <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"/>
      </svg>
    </a>
  </div>

  <div class="pdf-frame">
    <iframe 
      class="pdf-iframe"
      src={`${src}#toolbar=1&statusbar=0&navpanes=0&view=FitH`}
      title={title}
      loading="lazy"
    ></iframe>
    <div class="pdf-native-controls">
      <a class="pdf-btn" href={`${src}#toolbar=1&statusbar=0&navpanes=0`} target="_blank" rel="noreferrer">
        Open with native controls
      </a>
    </div>
  </div>
</div>

<style>
  .pdf-viewer-wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
    background: linear-gradient(135deg, rgba(26, 33, 42, 0.9), rgba(16, 24, 32, 0.95));
    border: 1px solid var(--border-strong);
    overflow: hidden;
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.04), 0 16px 32px rgba(0, 0, 0, 0.35);
    margin: 2rem 0;
  }

  .pdf-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.9rem 1rem;
    background: rgba(12, 20, 28, 0.9);
    border-bottom: 1px solid var(--border-strong);
    gap: 0.75rem;
  }

  .pdf-meta {
    display: flex;
    align-items: center;
    gap: 0.65rem;
    color: var(--text-secondary);
  }

  .pdf-label {
    padding: 0.15rem 0.55rem;
    border: 1px solid var(--border-strong);
    background: rgba(245, 165, 36, 0.08);
    color: var(--accent-primary);
    font-weight: 700;
    letter-spacing: 1px;
    font-size: 0.75rem;
  }

  .pdf-title {
    font-weight: 600;
    color: var(--text-primary);
    letter-spacing: 0.5px;
  }

  .pdf-btn {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-strong);
    padding: 0.45rem 0.7rem;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
    color: var(--text-primary);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.04);
  }

  .pdf-btn:hover {
    background: rgba(245, 165, 36, 0.08);
    border-color: var(--accent-primary);
    color: var(--accent-primary);
  }

  .pdf-frame {
    flex: 1;
    background: #0d131b;
    border-top: 1px solid var(--border-strong);
    position: relative;
  }

  .pdf-iframe {
    width: 100%;
    height: 100%;
    border: none;
    background: #0d131b;
  }

  .pdf-native-controls {
    position: absolute;
    bottom: 0.9rem;
    right: 1rem;
    z-index: 2;
    display: flex;
    justify-content: flex-end;
  }

  .pdf-native-controls .pdf-btn {
    padding: 0.4rem 0.85rem;
    font-size: 0.8rem;
    letter-spacing: 0.25px;
    border-color: var(--accent-primary);
    color: var(--accent-primary);
    background: rgba(245, 165, 36, 0.08);
    box-shadow:
      inset 0 1px 0 rgba(255, 255, 255, 0.04),
      0 4px 14px rgba(0, 0, 0, 0.25);
  }

  .pdf-native-controls .pdf-btn:hover {
    background: rgba(245, 165, 36, 0.14);
    color: var(--text-primary);
  }
</style>
