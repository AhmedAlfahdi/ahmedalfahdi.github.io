---
interface Props {
  src: string;
  title?: string;
  height?: string;
  width?: string;
}

const {
  src,
  title = 'PDF Document',
  height = '640px',
} = Astro.props;
---

<div class="pdf-viewer-wrapper" style={`height: ${height};`}>
  <div class="pdf-header">
    <div class="pdf-meta">
      <span class="pdf-label">PDF</span>
      <span class="pdf-title">{title}</span>
    </div>
  </div>

  <div class="pdf-frame">
    <iframe 
      class="pdf-iframe"
      src={`${src}#toolbar=1&statusbar=0&navpanes=0&view=FitH`}
      title={title}
      loading="lazy"
    ></iframe>
  </div>
</div>

<style>
  .pdf-viewer-wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
    background: linear-gradient(135deg, rgba(26, 33, 42, 0.9), rgba(16, 24, 32, 0.95));
    border: 1px solid var(--border-strong);
    overflow: hidden;
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.04), 0 16px 32px rgba(0, 0, 0, 0.35);
    margin: 2rem auto;
    width: 80%;
    max-width: 1400px;
    align-self: center;  /* center in flex parents */
    justify-self: center; /* center in grid parents */
    place-self: center;   /* fallback centering for combined layouts */
  }

  .pdf-header {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 0.9rem 1rem;
    background: rgba(12, 20, 28, 0.9);
    border-bottom: 1px solid var(--border-strong);
    gap: 0.75rem;
  }

  .pdf-meta {
    display: flex;
    align-items: center;
    gap: 0.65rem;
    flex-wrap: wrap;
    color: var(--text-secondary);
  }

  .pdf-label {
    padding: 0.15rem 0.55rem;
    border: 1px solid var(--border-strong);
    background: rgba(245, 165, 36, 0.08);
    color: var(--accent-primary);
    font-weight: 700;
    letter-spacing: 1px;
    font-size: 0.75rem;
    white-space: nowrap; /* keep PDF together on narrow screens */
  }

  .pdf-title {
    font-weight: 600;
    color: var(--text-primary);
    letter-spacing: 0.5px;
  }

  .pdf-btn {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-strong);
    padding: 0.45rem 0.7rem;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
    color: var(--text-primary);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.04);
  }

  .pdf-btn:hover {
    background: rgba(245, 165, 36, 0.08);
    border-color: var(--accent-primary);
    color: var(--accent-primary);
  }

  .pdf-frame {
    flex: 1;
    background: #0d131b;
    border-top: 1px solid var(--border-strong);
    position: relative;
    width: 100%;
  }

  .pdf-iframe {
    width: 100%;
    height: 100%;
    border: none;
    background: #0d131b;
  }

  @media (max-width: 768px) {
    .pdf-viewer-wrapper {
      margin: 1.5rem 0;
      width: 100%;
      align-self: stretch;
    }
    .pdf-header {
      flex-wrap: wrap;
      gap: 0.5rem 0.75rem;
    }
    .pdf-frame {
      min-height: 420px;
    }
    .pdf-iframe {
      min-height: 420px;
    }
  }
</style>
