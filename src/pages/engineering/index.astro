---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('engineering');
const sortedProjects = projects.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Engineering Projects">
  <div class="container">
    <h1>Engineering Projects</h1>
    <p class="intro">Real-life engineering challenges and technical explorations.</p>
    
    <div class="grid">
      {sortedProjects.map(project => (
        <a href={`/engineering/${project.slug}`} class="card">
          <div class="status-badge">{project.data.status}</div>
          <h2>{project.data.title}</h2>
          <p>{project.data.description}</p>
          <div class="meta">
            <span class="category">[{project.data.category}]</span>
            <time>{project.data.date.toLocaleDateString()}</time>
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .intro {
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
  .card {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-light);
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: border-color 0.2s;
    position: relative;
  }
  .card:hover {
    border-color: var(--accent-primary);
  }
  .status-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    font-size: 0.7rem;
    padding: 0.2rem 0.5rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-light);
    color: var(--accent-secondary);
    text-transform: uppercase;
  }
  .card h2 {
    margin: 0 0 0.5rem 0;
    color: var(--text-primary);
    padding-right: 4rem;
  }
  .card p {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }
  .meta {
    display: flex;
    justify-content: space-between;
    font-size: 0.8rem;
    color: var(--text-muted);
    font-family: var(--font-mono);
  }
</style>
