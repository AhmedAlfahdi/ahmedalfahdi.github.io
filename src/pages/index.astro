  }

  .contact-link:hover .link-label {
    color: var(--bg-primary);
  }

  .link-label {
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--accent-secondary);
    transition: color 0.2s;
  }

  @media (max-width: 768px) {
    .section-cards {
      grid-template-columns: 1fr;
    }

