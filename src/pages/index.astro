<script is:inline>
  const homeUtc = document.getElementById('home-utc');
  const pad = (n) => String(n).padStart(2, '0');
  const pad3 = (n) => String(n).padStart(3, '0');
  const updateUtc = () => {
    const d = new Date();
    const date = `${d.getUTCFullYear()}-${pad(d.getUTCMonth() + 1)}-${pad(d.getUTCDate())}`;
    const ms = pad3(d.getUTCMilliseconds());
    const hours = pad(d.getUTCHours());
    const minutes = pad(d.getUTCMinutes());
    const seconds = pad(d.getUTCSeconds());
    
    // Only update if the time has changed (to preserve animations)
    const timeString = `${hours}:${minutes}:${seconds}`;
    const lastTime = homeUtc.dataset.lastTime;
    const lastHour = lastTime ? lastTime.split(':')[0] : null;
    const lastMinute = lastTime ? lastTime.split(':')[1] : null;
    const hourChanged = lastHour !== null && lastHour !== hours;
    const minuteChanged = lastMinute !== null && lastMinute !== minutes;
    
    if (lastTime !== timeString) {
      const colon1 = document.createElement('span');
      colon1.className = 'utc-colon';
      colon1.textContent = ':';
      colon1.style.display = 'inline-block';
      colon1.style.animation = 'colon-blink 1s step-end infinite';
      colon1.style.color = 'rgba(245, 165, 36, 0.71)';
      colon1.style.fontWeight = '700';
      
      const colon2 = document.createElement('span');
      colon2.className = 'utc-colon';
      colon2.textContent = ':';
      colon2.style.display = 'inline-block';
      colon2.style.animation = 'colon-blink 1s step-end infinite';
      colon2.style.color = 'rgba(245, 165, 36, 0.71)';
      colon2.style.fontWeight = '700';
      
      // Create hours span with animation if hour changed
      const hoursSpan = document.createElement('span');
      hoursSpan.textContent = hours;
      if (hourChanged) {
        hoursSpan.className = 'time-change-pulse';
        hoursSpan.style.display = 'inline-block';
        hoursSpan.style.animation = 'time-change 0.6s ease-out';
      }
      
      // Create minutes span with animation if minute changed
      const minutesSpan = document.createElement('span');
      minutesSpan.textContent = minutes;
      if (minuteChanged) {
        minutesSpan.className = 'time-change-pulse';
        minutesSpan.style.display = 'inline-block';
        minutesSpan.style.animation = 'time-change 0.6s ease-out';
      }
      
      // Clear and rebuild
      homeUtc.innerHTML = '';
      homeUtc.appendChild(document.createTextNode(`UTC ${date}`));
      // Add space between date and clock
      const spaceSpan = document.createElement('span');
      spaceSpan.className = 'utc-space';
      spaceSpan.style.display = 'inline-block';
      spaceSpan.style.width = '1rem';
      homeUtc.appendChild(spaceSpan);
      homeUtc.appendChild(hoursSpan);
      homeUtc.appendChild(colon1);
      homeUtc.appendChild(minutesSpan);
      homeUtc.appendChild(colon2);
      homeUtc.appendChild(document.createTextNode(`${seconds}.${ms} `));
      const dutSpan = document.createElement('span');
      dutSpan.className = 'utc-dut';
      dutSpan.style.fontSize = '0.8em';
      dutSpan.style.opacity = '0.7';
      dutSpan.textContent = '(DUT1 ±0.9s)';
      homeUtc.appendChild(dutSpan);
      
      homeUtc.dataset.lastTime = timeString;
    } else {
      // Only update milliseconds
      const textNodes = Array.from(homeUtc.childNodes).filter(n => n.nodeType === Node.TEXT_NODE);
      if (textNodes.length > 0) {
        const lastTextNode = textNodes[textNodes.length - 1];
        if (lastTextNode.textContent.includes('.')) {
          lastTextNode.textContent = lastTextNode.textContent.replace(/\d{2}\.\d{3}/, `${seconds}.${ms} `);
        }
      }
    }
  };
  if (homeUtc) {
    updateUtc();
    // Update every 10ms for smooth millisecond display
    setInterval(updateUtc, 10);
    
    // Debug: Check if colon elements exist
    setTimeout(() => {
      const colons = homeUtc.querySelectorAll('.utc-colon');
      console.log('Colon elements found:', colons.length);
      if (colons.length > 0) {
        colons.forEach((colon, i) => {
          console.log(`Colon ${i}:`, colon, 'computed style:', window.getComputedStyle(colon).animation);
        });
      }
    }, 1000);
  }

  // Animate skill list items on scroll
  const skillItems = document.querySelectorAll('.skills-list li');
  if (skillItems.length > 0) {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          setTimeout(() => {
            entry.target.classList.add('visible');
          }, index * 100);
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });

    skillItems.forEach(item => observer.observe(item));
  }
</script>

