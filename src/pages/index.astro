<script is:inline>
  const homeUtc = document.getElementById('home-utc');
  const pad = (n) => String(n).padStart(2, '0');
  const pad3 = (n) => String(n).padStart(3, '0');
  const updateUtc = () => {
    const d = new Date();
    const date = `${d.getUTCFullYear()}-${pad(d.getUTCMonth() + 1)}-${pad(d.getUTCDate())}`;
    const ms = pad3(d.getUTCMilliseconds());
    homeUtc.innerHTML = `UTC ${date} ${pad(d.getUTCHours())}:${pad(d.getUTCMinutes())}:${pad(d.getUTCSeconds())}.${ms} <span style="font-size: 0.8em; opacity: 0.7;">(DUT1 ±0.9s)</span>`;
  };
  if (homeUtc) {
    updateUtc();
    // Update every 10ms for smooth millisecond display
    setInterval(updateUtc, 10);
  }

  // Animate skill list items on scroll
  const skillItems = document.querySelectorAll('.skills-list li');
  if (skillItems.length > 0) {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          setTimeout(() => {
            entry.target.classList.add('visible');
          }, index * 100);
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });

    skillItems.forEach(item => observer.observe(item));
  }
</script>

<style>
  .home-wrap {
    position: relative;
  }
  .utc-badge {
    display: block;
    text-align: center;
    margin: 0 auto 2rem;
    width: fit-content;
    font-size: 1rem;
    letter-spacing: 1.2px;
    color: var(--accent-primary);
    text-decoration: none;
    padding: 0.65rem 1.2rem;
    border: 2px solid var(--accent-primary);
    border-radius: 6px;
    background: rgba(245, 165, 36, 0.08);
    font-family: var(--font-mono);
    font-weight: 600;
    box-shadow: 0 2px 8px rgba(245, 165, 36, 0.15);
    transition: all 0.2s ease;
    position: relative;
    animation: utc-pulse 3s ease-in-out infinite;
  }

  .utc-badge::before {
    content: '';
    position: absolute;
    inset: -2px;
    border: 2px solid var(--accent-primary);
    border-radius: inherit;
    opacity: 0;
    animation: utc-border-pulse 3s ease-in-out infinite;
  }

  @keyframes utc-pulse {
    0%, 100% {
      box-shadow: 0 2px 8px rgba(245, 165, 36, 0.15);
    }
    50% {
      box-shadow: 0 2px 12px rgba(245, 165, 36, 0.3);
    }
  }

  @keyframes utc-border-pulse {
    0%, 100% {
      opacity: 0;
      transform: scale(1);
    }
    50% {
      opacity: 0.3;
      transform: scale(1.02);
    }
  }
  .utc-badge:hover,
  .utc-badge:focus {
    color: #fff;
    background: rgba(245, 165, 36, 0.15);
    border-color: #f5a524;
    box-shadow: 0 4px 12px rgba(245, 165, 36, 0.25);
    transform: translateY(-1px);
  }
  .subtitle {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    font-weight: 400;
    letter-spacing: 1px;
    font-family: var(--font-mono);
    border-left: 2px solid var(--accent-primary);
    padding-left: 1rem;
    position: relative;
    overflow: hidden;
    animation: subtitle-fade-in 1s ease-out;
    text-align: center;
    border-left: none;
    padding-left: 0;
    border-top: 2px solid var(--accent-primary);
    border-bottom: 2px solid var(--accent-primary);
    padding-top: 0.75rem;
    padding-bottom: 0.75rem;
  }

  .subtitle::before {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--accent-primary), transparent);
    opacity: 0.6;
    animation: border-glow-top 3s ease-in-out infinite;
  }

  .subtitle::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--accent-primary), transparent);
    opacity: 0.6;
    animation: border-glow-bottom 3s ease-in-out infinite;
    animation-delay: 1.5s;
  }

  .subtitle-role {
    display: inline-block;
    position: relative;
    background: linear-gradient(90deg, var(--text-secondary), var(--accent-secondary), var(--text-secondary));
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: role-gradient 4s ease infinite;
    transition: all 0.3s ease;
  }

  .subtitle-role:nth-child(1) {
    animation-delay: 0s;
  }

  .subtitle-role:nth-child(3) {
    animation-delay: 1.3s;
  }

  .subtitle-role:nth-child(5) {
    animation-delay: 2.6s;
  }

  .subtitle-separator {
    display: inline-block;
    margin: 0 0.75rem;
    color: var(--accent-primary);
    opacity: 0.5;
    animation: separator-pulse 2.5s ease-in-out infinite;
    font-weight: 300;
  }

  .subtitle-separator:nth-child(2) {
    animation-delay: 0s;
  }

  .subtitle-separator:nth-child(4) {
    animation-delay: 1.25s;
  }

  @keyframes subtitle-fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes border-glow-top {
    0%, 100% {
      opacity: 0.4;
      box-shadow: 0 -2px 4px rgba(245, 165, 36, 0.3);
    }
    50% {
      opacity: 0.8;
      box-shadow: 0 -2px 8px rgba(245, 165, 36, 0.5);
    }
  }

  @keyframes border-glow-bottom {
    0%, 100% {
      opacity: 0.4;
      box-shadow: 0 2px 4px rgba(245, 165, 36, 0.3);
    }
    50% {
      opacity: 0.8;
      box-shadow: 0 2px 8px rgba(245, 165, 36, 0.5);
    }
  }

  @keyframes role-gradient {
    0%, 100% {
      background-position: 0% center;
    }
    50% {
      background-position: 100% center;
    }
  }

  @keyframes separator-pulse {
    0%, 100% {
      opacity: 0.4;
      transform: scale(1);
    }
    50% {
      opacity: 0.7;
      transform: scale(1.1);
    }
  }

