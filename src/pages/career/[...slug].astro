---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const career = await getCollection('career');
  return career.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout title={`${entry.data.role} at ${entry.data.company}`}>
  <div class="container">
    <a href="/career" class="back-link">‚Üê Back to Career</a>
    <article class="content">
      <div class="header">
        <h2>{entry.data.role}</h2>
        <h4>{entry.data.company}</h4>
        <div class="meta">
          <span class="date">
            {entry.data.startDate.toLocaleDateString()} - {entry.data.current ? 'Present' : entry.data.endDate?.toLocaleDateString()}
          </span>
          {entry.data.location && <span class="location">üìç {entry.data.location}</span>}
        </div>
      </div>
      
      <div class="prose">
        <Content />
      </div>
    </article>
  </div>
</BaseLayout>

<style>
  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: var(--accent-secondary);
    text-decoration: none;
  }
  .header {
    margin-bottom: 3rem;
    border-bottom: 1px solid var(--border-light);
    padding-bottom: 2rem;
  }
  .header h2 {
    color: var(--accent-primary);
    margin: 0 0 1rem 0;
    font-size: 1.5rem;
  }
  .meta {
    font-family: var(--font-mono);
    color: var(--text-secondary);
    display: flex;
    gap: 2rem;
  }
  .meta {
    font-family: var(--font-mono);
    color: var(--text-secondary);
    display: flex;
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.35rem;
    }
    .header {
      margin-bottom: 2.25rem;
      padding-bottom: 1.5rem;
    }
    .header h2 {
      font-size: 1.3rem;
      line-height: 1.25;
    }
    .header h4 {
      font-size: 1rem;
      line-height: 1.3;
      margin-bottom: 0.75rem;
    }
  }
  .prose {
    color: var(--text-secondary);
    line-height: 1.6;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    word-break: break-word;
    overflow-wrap: anywhere;
  }
  /* Let rich embeds like PDF viewers use the wider container while staying centered */
  .prose :global(.pdf-viewer-wrapper) {
    margin-left: auto;
    margin-right: auto;
  }
  .prose :global(h3) {
    color: var(--text-primary);
    margin-top: 2rem;
  }
  .prose :global(ul) {
    padding-left: 1.5rem;
  }
</style>
