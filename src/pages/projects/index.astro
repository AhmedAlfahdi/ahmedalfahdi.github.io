---
import BaseLayout from '../../layouts/BaseLayout.astro';

const projects = [
  {
    title: 'Mech.Eng.Hub',
    description: 'Opinionated collection of websites, software, and guides for Mechanical Engineers.',
    date: 'GitHub',
    href: 'https://github.com/AhmedAlfahdi/Mech.Eng.Hub',
    tags: ['resources', 'mechanical', 'software'],
  },
  {
    title: 'AHK-V2-Tools',
    description: 'AutoHotkey v2 utilities and automation helpers.',
    date: 'GitHub',
    href: 'https://github.com/AhmedAlfahdi/AHK-V2-Tools',
    tags: ['automation', 'ahk', 'windows'],
  },
  {
    title: 'GOG-UpdateChecker',
    description: 'Checks and surfaces GOG game updates.',
    date: 'GitHub',
    href: 'https://github.com/AhmedAlfahdi/GOG-UpdateChecker',
    tags: ['tools', 'games', 'updates'],
  },
  {
    title: 'QR-reader',
    description: 'Quick QR reading utility.',
    date: 'GitHub',
    href: 'https://github.com/AhmedAlfahdi/QR-reader',
    tags: ['qr', 'utility'],
  },
  {
    title: 'Voidpad',
    description: 'Reviving an old laptop for personal journaling and writing.',
    date: 'Project Page',
    href: '/projects/Voidpad',
    tags: ['linux', 'hardware', 'journaling', 'void-linux', 'obsidian'],
  },
  // {
  //   title: 'Homelab',
  //   description: 'Personal homelab setup and configurations. (Under development)',
  //   date: 'Astro Page',
  //   href: '/projects/homelab',
  //   tags: ['homelab', 'astro', 'demo'],
  // },
];
---

<BaseLayout title="Personal Projects">
  <div class="container">
    <h1>Personal Projects</h1>
    <p class="intro">Showcase of builds, resources, and deep-dives.</p>
    
    <div class="grid">
      {projects.map(project => {
        const isExternal = project.href.startsWith('http');
        return (
          <a 
            href={project.href} 
            class="card" 
            target={isExternal ? "_blank" : undefined}
            rel={isExternal ? "noreferrer" : undefined}
          >
            <h2>{project.title}</h2>
            <p>{project.description}</p>
            <div class="meta">
              <span>{project.date}</span>
              {project.tags && (
                <div class="tags">
                  {project.tags.map(tag => <span class="tag">#{tag}</span>)}
                </div>
              )}
            </div>
          </a>
        );
      })}
    </div>
  </div>
</BaseLayout>

<style>
  .intro {
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }
  .card {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-light);
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: border-color 0.2s;
  }
  .card:hover {
    border-color: var(--accent-primary);
  }
  .card h2 {
    margin: 0 0 0.5rem 0;
    color: var(--text-primary);
  }
  .card p {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }
  .meta {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    flex-wrap: wrap;
    font-size: 0.8rem;
    color: var(--text-muted);
  }
  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    align-items: center;
  }
  .tag {
    background: var(--bg-primary);
    padding: 0.2rem 0.5rem;
    border: 1px solid var(--border-light);
    display: inline-flex;
    align-items: center;
  }

  @media (max-width: 768px) {
    .container {
      padding: 1.25rem;
    }
    .grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }
    .card {
      padding: 1.25rem;
    }
  }
</style>

