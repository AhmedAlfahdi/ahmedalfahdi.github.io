---
import BaseLayout from '../../layouts/BaseLayout.astro';

const projects = [
  {
    title: 'Mech.Eng.Hub',
    description: 'Opinionated collection of websites, software, and guides for Mechanical Engineers.',
    date: 'Active',
    href: '/projects/mech-eng-hub',
    tags: ['resources', 'mechanical', 'software'],
  },
  {
    title: 'Project Orion (Demo)',
    description: 'Placeholder deep-dive card. Replace with a real project when ready.',
    date: 'Planned',
    href: '/projects/project-orion',
    tags: ['engineering', 'demo'],
  },
];
---

<BaseLayout title="Personal Projects">
  <div class="container">
    <h1>Personal Projects</h1>
    <p class="intro">Showcase of builds, resources, and deep-dives.</p>
    
    <div class="grid">
      {projects.map(project => (
        <a href={project.href} class="card">
          <h2>{project.title}</h2>
          <p>{project.description}</p>
          <div class="meta">
            <span>{project.date}</span>
            {project.tags && (
              <div class="tags">
                {project.tags.map(tag => <span class="tag">#{tag}</span>)}
              </div>
            )}
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .intro {
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
  .card {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-light);
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: border-color 0.2s;
  }
  .card:hover {
    border-color: var(--accent-primary);
  }
  .card h2 {
    margin: 0 0 0.5rem 0;
    color: var(--text-primary);
  }
  .card p {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }
  .meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8rem;
    color: var(--text-muted);
  }
  .tags {
    display: flex;
    gap: 0.5rem;
  }
  .tag {
    background: var(--bg-primary);
    padding: 0.2rem 0.5rem;
    border: 1px solid var(--border-light);
  }
</style>

