---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('coding');
const sortedProjects = projects.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Coding Projects">
  <div class="container">
    <h1>Coding Projects</h1>
    <p class="intro">Showcase of my programming projects and software development work.</p>
    
    <div class="grid">
      {sortedProjects.map(project => (
        <a href={`/coding/${project.slug}`} class="card">
          <h2>{project.data.title}</h2>
          <p>{project.data.description}</p>
          <div class="meta">
            <span>{project.data.date.toLocaleDateString()}</span>
            {project.data.tags && (
              <div class="tags">
                {project.data.tags.map(tag => <span class="tag">#{tag}</span>)}
              </div>
            )}
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .intro {
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
  .card {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-light);
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: border-color 0.2s;
  }
  .card:hover {
    border-color: var(--accent-primary);
  }
  .card h2 {
    margin: 0 0 0.5rem 0;
    color: var(--text-primary);
  }
  .card p {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }
  .meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8rem;
    color: var(--text-muted);
  }
  .tags {
    display: flex;
    gap: 0.5rem;
  }
  .tag {
    background: var(--bg-primary);
    padding: 0.2rem 0.5rem;
    border: 1px solid var(--border-light);
  }
</style>
