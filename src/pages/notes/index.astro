---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const notes = await getCollection('notes');
const sortedNotes = notes.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Notes">
  <div class="container">
    <h1>Notes</h1>
    <p class="intro">Personal knowledge base and observations.</p>
    
    <div class="list">
      {sortedNotes.map(note => (
        <a href={`/notes/${note.slug}`} class="list-item">
          <div class="item-header">
            <h2>{note.data.title}</h2>
            <time>{note.data.date.toLocaleDateString()}</time>
          </div>
          {note.data.description && <p>{note.data.description}</p>}
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .intro {
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }
  .list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .list-item {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-light);
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: border-color 0.2s;
  }
  .list-item:hover {
    border-color: var(--accent-primary);
  }
  .item-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 0.5rem;
  }
  .list-item h2 {
    margin: 0;
    font-size: 1.2rem;
    color: var(--text-primary);
  }
  .list-item time {
    font-size: 0.9rem;
    color: var(--text-muted);
    font-family: var(--font-mono);
  }
  .list-item p {
    margin: 0;
    color: var(--text-secondary);
  }
</style>
